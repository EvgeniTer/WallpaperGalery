<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="com.ownsoft.narutowallpaper.LeftMenuFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/left_menu_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_menu_item_height"
        android:paddingLeft="@dimen/left_menu_item_padding_left"
        android:orientation="horizontal" >

       

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/image_width_in_menu"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_favorite" />
        
         <TextView
            android:id="@+id/favoriteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/favorite"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white_color"
        android:orientation="horizontal" >
      </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:background="@color/left_menu_bg_color"
        android:cacheColorHint="@color/left_menu_bg_color"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
